<%- include('../includes/header', {title: 'Register'}) %>

<%- include('../includes/navigation') %>
<main class='container'>
  <% if(typeof error !== 'undefined') { %>
    <div class='alert alert-danger'><%- error %></div>
  <% } %>
  <div class='loginForm'>
    <h2 class='text-center'>Register your account</h1>
    <form action='/register' method='post' autocomplete='off' class='loginForm'>
      <div class="row mb-3">
        <div class="form-group col-md-6">
          <label for="firstname">ðŸ‘¤ First name</label>
          <input type="text" name="firstname" id="firstname" value='<%- data.firstname %>' required autofocus class="form-control" />
        </div>

        <div class="form-group col-md-6">
          <label for="lastname">ðŸ‘¤ Family name / Last name</label>
          <input type="text" name="lastname" id="lastname" value='<%- data.lastname %>' required autofocus class="form-control" />
        </div>
      </div>

      <div class='form-group mb-3'>
        <label for='usermail'>ðŸ“§ Email Address &nbsp;&nbsp;<small>to receive alert and login</small></label>
        <input type='email' name='usermail' id='usermail' value='<%- data.mail %>' required class='form-control' placeholder='We will not send marketing emails'/>
      </div>

      <div class='form-group mb-3'>
        <label for='password'>ðŸ”’ Password</label>
        <input type='password' name='password' id='password' placeholder='We will protect your password with hash function' required class='form-control' />
      </div>

      <div class='form-group mb-3'>
        <label for='confirm-pw'>ðŸ”’ Confirm Password</label>
        <input type='password' name='confirm-pw' id='confirm-pw' required class='form-control' />
      </div>

      <button type='submit' class='btn btn-dark mx-auto'>Register</button>
    </form>
  </div>
</main>

<%- include('../includes/footer') %>
<%- include('includes/header', {title: 'Dashboard'}) %>

<%- include('includes/navigation', {current: 'dashboard'}) %>
<main class='container'>
  <div class="d-flex flex-column align-items-center">
    <% if (session.user) { %>
      <p>Welcome, <%- session.user.firstname %>!</p>
      <a href="/new-event">
        <button class="btn btn-dark m-auto">Add event ðŸ“…</button>
      </a>
    <% } else { %>
      <p>Please log in before proceed.</p>
      <a href="/login">Login</a>
    <% } %>
  </div>
  
  <hr />
  <h2 class="text-center">Your events</h2>
  <div class="table-responsive my-3">
    <table id='event-table' class="table table-hover">
      <thead>
        <tr>
          <th onClick='sortTable(0)' style="cursor: pointer; width:10%;">Date</th>
          <th onClick='sortTable(1)' style="cursor: pointer; max-width:30%;">Title</th>
          <th onClick='sortTable(2)' style="cursor: pointer; width:30%;">Description</th>
          <th onClick='sortTable(3)' style="cursor: pointer; width:15%;">Alert Time</th>
          <th style="width:15%;">Action</th>
        </tr>
      </thead>
      <tbody>
        <% for(let i = 0; i < events.length; i++) { %>
          <tr>
            <td><%- events[i].eventDate %></td>
            <td><%- events[i].title %></td>
            <td><%- events[i].description %></td>
            <td><%- events[i].alertDate %></td>
            <td>
              <div class="d-flex">
                <a href="/event/<%- events[i].id %>">
                  <button type='submit' class="btn btn-sm btn-outline-dark me-2">Edit</button>
                </a>
                <form action="/event/delete/<%- events[i].id %>" method="post">
                  <button type='submit' class="btn btn-sm btn-danger">Remove</button>
                </form>
              </div>
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>

    
    <% if(events.length === 0) { %>
        <h2 style="font-size:20px; color:gray;text-align:center;">You don't have events now, perhaps add some?</h2>
    <% } %>
  </div>
</main>

<script>
  function sortTable(n) {
    let table = document.getElementById('event-table');
    let rows = table.rows;
    console.log(table.rows);

    // Loop through every rows (expect header)
    for(let i = 1; i < table.rows.length; i++) {
      console.log(`Row ${i}: ${table.rows[i].getElementsByTagName('td')[n].innerHTML}`)

      for(let j = i+1; j < table.rows.length; j++) {
        rows[i].parentNode.insertBefore(rows[i+1], rows[i])
      }
    }
  }
</script>
<%- include('includes/footer') %>